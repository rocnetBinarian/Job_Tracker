@model Job_Application_Tracker.Models.Entities.Contact

<form asp-action="Edit" asp-controller="Contact" method="post">
    <partial name="~/Views/Contact/Partials/_AddOrEditLayout.cshtml" data="@Model" />
    @Html.HiddenFor(m => m.Id)
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>
<form asp-action="Delete" asp-controller="Contact" method="post">
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.CompanyId)
    <div class="modal-footer">
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>