@model Job_Application_Tracker.Models.ViewModels.Company.VM_ViewOrEdit
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="text-left">
    <div class="d-flex">
        <div class="w-25 text-left">
            <h1>Edit Company</h1>
        </div>
        <div class="ml-auto align-text-bottom d-flex">
            <span class="align-self-end mr-3">
                @{
                    var viewData = new Dictionary<string, string>()
                    {
                        { "cid", Model.Company.Id.ToString() }
                    };
                }
                <a asp-action="View" asp-controller="Company" asp-all-route-data="viewData">View</a>
            </span>
        </div>
    </div>
    <div class="container">
        <partial name="~/Views/Company/Partials/Edit_CompanyInfo.cshtml" for="Company" />

        <partial name="~/Views/Company/Partials/Edit_ContactList.cshtml" for="ContactListVM" />

        <partial name="~/Views/Company/Partials/Edit_InterviewQA.cshtml" for="Company" />
    </div>
</div>